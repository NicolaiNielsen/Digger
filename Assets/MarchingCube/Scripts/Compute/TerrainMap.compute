#pragma kernel CSMain

RWTexture3D<float> DensityTexture;
int3 textureSize;

float calculateDensity(int3 cell) {
    // Hvis vi er i det Ã¸verste lag i Y
    if (cell.y >= textureSize.y - 1)
        return 1; //luft
    else
        return -1; //solid
}

[numthreads(8,8,8)]
void CSMain (int3 id : SV_DispatchThreadID)
{
    if (id.x >= textureSize.x || id.z >= textureSize.z)
        return;

    float density = calculateDensity(id);
    DensityTexture[id] = density;
}
